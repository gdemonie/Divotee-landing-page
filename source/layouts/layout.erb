<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Divotee" %></title>
    <link rel="shortcut icon" type="image/x-icon" sizes="114x114" href="golf_logo.ico" >
    <link href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">

    <nav class="navbar navbar-default navbar-wagon" role="navigation">
      <div class="container-fluid">
        <div class="row">

        <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <div class="row-height">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <div class="navbar-toggle-original">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </div>
              </button>
            </div>
            <div class="row-height">
              <a class="navbar-brand" href="/">
                <%= image_tag "divotee-full-icon.png" %>
              </a>
            </div>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <% link_to "#banner" do%>
                      <i class="fa fa-home"></i> Home
                    <% end %>
                  </li>
                  <li>
                    <% link_to "#description" do%>
                      <i class="fa fa-star"></i> Features
                    <% end %>
                  </li>
                  <li>
                    <% link_to "#contact-banner" do %>
                      <i class="fa fa-envelope-o"></i> Contact Us
                    <% end %>
                  </li>
                </ul>

          </div><!-- /.navbar-collapse -->

        </div>
      </div><!-- /.container-fluid -->
    </nav>


    <%= yield %>


    <div id="contact-banner" class= "window-height">
      <div class="container text-center">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-sm-offset-3 padded">
            <h2>Contact Us</h2>

            <form role="form" action="https://getsimpleform.com/messages?form_api_token=b369cd3b19d60f0ab690389288a0968b" method="post">

    <!-- the redirect_to is optional, the form will redirect to the referrer on submission -->
    <!-- <input type='hidden' name='redirect_to' value='<the complete return url e.g. http://fooey.com/thank-you.html>' /> -->
    <!-- all your input fields here.... -->


              <div class="form-group">
                <label class="control-label" for="last_name">Last name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Rory McIlroy">
              </div>

              <div class="form-group">
                <label class="control-label" for="email">Email address</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="rory@mcilroy.com">
              </div>
              <div class="form-group">
                <label class="control-label" for="message">Your message</label>
                <textarea class="form-control" name="message" id="message" rows="2" placeholder=""></textarea>
              </div>
              <div class="position-relative">
              <button type="submit" class="btn btn-success" enable>
                Send
              </button>
              </div>
            </form>

          </div>
        </div>

    </div>
    <div id="footer">

      <div id="fb-root"></div>
      <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4&appId=579300895541967";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>

    <div class="row about-us text-center">
      <a href="https://www.facebook.com/golfdivotee"><p>Join us on <i class="fa fa-facebook"></i>acebook</p></a>
      <div class="row">
        <ul class="list-inline text-center">
          <div class="fb-like" data-href="https://www.facebook.com/golfdivotee" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></div>
        </ul>
      </div>
    </div>

  </div>
</div>



<!-- script -->



    <script>
      window.sr = new scrollReveal();
    </script>

  </body>
</html>
